extends main.pug

block scripts
    script(src="/js/scriptsInPages/add.mjs", type="module", defer)
    
block customStylesheets
    link(href="/css/responses/get/add.css", rel="stylesheet")

block theArticle
    article
        div#titleAndVideoIdInstructions
            | The title is what you will use to retrieve the video you want.

        form
            div#titleAndVideoId
                input(type="text", name="title", placeholder="title")
                input(type="text", name="videoId", placeholder="video ID")

            div#secondsInstructions1 
                | The start and end second inputs are for a part you want skipped.
            div#secondsInstructions2
                | Each set of start and end inputs will correspond to a part that
                | will be skipped.
            div#groupOfSecondsInputs
                div.secondsInput
                    input(type="number", name="start1", min="0", placeholder="start second", class="startInput")
                    input(type="number", name="end1" min="0", placeholder="end second" class="endInput")
        
        div#addPartDiv
            button(id="addPart") Add part
        div#submitButtonDiv
            button(id="submitButton") Submit